@using MvcCv.Models.Entity
@model List<TblDeneyimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Deneyim listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>
            ID
        </th>
        <th>
            Başlık
        </th>
        <th>
            Alt Başlık
        </th>
        <th>
            Tarih
        </th>
        <th>
            Sil
        </th>
        <th>
            Düzenle
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Baslik
            </td>
            <td>
                @item.AltBaslik
            </td>
            <td>
                @item.Tarih
            </td>
            <td>
               <a href="/Deneyim/DeneyimSil/@item.ID" onclick="return confirmDelete();" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Deneyim/DeneyimGetir/@item.ID" class="btn bg-gradient-gray">Düzenle</a>
            </td>
        </tr>
    }
</table>
<a href="/Deneyim/DeneyimEkle/" class="btn btn-info btn-lg">
    <i class="fas fa-plus-circle"></i> Yeni Deneyim Ekle</a>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Silmek istediğinize emin misiniz?");
    }</script>
