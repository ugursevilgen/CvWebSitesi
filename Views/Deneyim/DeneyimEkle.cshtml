
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Deneyim Ekle</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .admin-form {
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }

        .form-header {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

        .btn-save {
            background: #0d6efd;
            padding: 10px 30px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="admin-form">
                    <div class="form-header">
                        <h2><i class="fas fa-briefcase me-2"></i>Deneyim Ekle</h2>
                        <p class="text-muted">Yeni deneyim bilgilerini aşağıdaki forma ekleyin</p>
                    </div>

                    <form method="POST">
                        <!-- Başlık -->
                        <div class="mb-4">
                            <label for="baslik" class="form-label fw-bold">Başlık <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="baslik" name="baslik" placeholder="Örn: Yazılım Geliştirici" required>
                        </div>

                        <!-- Alt Başlık -->
                        <div class="mb-4">
                            <label for="altBaslik" class="form-label fw-bold">Alt Başlık</label>
                            <input type="text" class="form-control" id="altBaslik" name="altBaslik" placeholder="Örn: ABC Şirketi">
                        </div>

                        <!-- Açıklama -->
                        <div class="mb-4">
                            <label for="aciklama" class="form-label fw-bold">Açıklama <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="aciklama" name="aciklama" rows="5" placeholder="Deneyim detaylarını yazın..." required></textarea>
                        </div>

                        <!-- Tarih -->
                        <div class="mb-4">
                            <label for="tarih" class="form-label fw-bold">Tarih <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="tarih" name="tarih" placeholder="GG/AA/YYYY formatında" required>
                            <small class="text-muted">Örnek: 01/01/2001</small>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-save btn-primary">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Tarih formatı için opsiyonel jQuery Mask -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function(){
            // Tarih alanına otomatik format ekleme (opsiyonel)
            $('#tarih').mask('00/00/0000');
        });
    </script>
</body>
</html>
