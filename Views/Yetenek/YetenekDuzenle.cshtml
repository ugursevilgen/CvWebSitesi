@model MvcCv.Models.Entity.TblYeteneklerim
@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Yetenek Düzenle</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .admin-form {
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }

        .form-header {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

        .btn-save {
            background: #0d6efd;
            padding: 10px 30px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="admin-form">
                    <div class="form-header">
                        <h2><i class="fas fa-briefcase me-2"></i>Yetenek Düzenle</h2>
                        <p class="text-muted">Yetenek bilgilerini aşağıdaki formda düzenleyin.</p>
                    </div>

                    <form method="POST">
                        <!-- ID (Gizli alan) -->
                        @Html.HiddenFor(x => x.ID)

                        <!-- Yetenek -->
                        <div class="mb-4">
                            <label for="Yetenek" class="form-label fw-bold">Yetenek Adı <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Yetenek" name="Yetenek" value="@Model.Yetenek" placeholder="Örn: Veri Analizi" required>
                        </div>

                        <!-- Oran -->
                        <div class="mb-4">
                            <label for="Oran" class="form-label fw-bold">Derece</label>
                            <input type="text" class="form-control" id="Oran" name="Oran" value="@Model.Oran" placeholder="Örn: 80">
                        </div>

                        <!-- Güncelle Butonu -->
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-save btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>