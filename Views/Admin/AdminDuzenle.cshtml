
@model MvcCv.Models.Entity.TblAdmin

@{
    ViewBag.Title = "AdminDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Deneyim Düzenle</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .admin-form {
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }

        .form-header {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 10px;
            margin-bottom: 30px;
        }

        .btn-save {
            background: #0d6efd;
            padding: 10px 30px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="admin-form">
                    <div class="form-header">
                        <h2><i class="fas fa-edit me-2"></i>Kullanıcı Düzenle</h2>
                        <p class="text-muted">ID: @Model.ID numaralı kullanıcı bilgisini düzenliyorsunuz.</p>
                    </div>

                    <form method="POST">


                        <!-- Başlık -->
                        <div class="mb-4">
                            <label for="KullaniciAdi" class="form-label fw-bold">Kullanıcı Adı <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                        </div>

                        <!-- Alt Başlık -->
                        <div class="mb-4">
                            <label for="Sifre" class="form-label fw-bold">Şifre</label>
                            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                        </div>
                        <!-- Kaydet Butonu -->
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-save btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- jQuery Mask -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {

            // URL'den ID parametresini al
            const urlParams = new URLSearchParams(window.location.search);
            const AdminId = urlParams.get('id');

            if (deneyimId) {
            // ID'yi formda göster
            $('#AdminId').text(AdminId);
            $('#id').val(AdminId);

            // AJAX ile deneyim verilerini getir
            $.ajax({
                url: '/Admin/AdminDuzenle?id=' + AdminId,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data) {
                        // Formu doldur
                        $('#KullaniciAdi').val(data.KullaniciAdi);
                        $('#Sifre').val(data.Sifre);

                    }
                    else {
                        alert('Admin bilgisi bulunamadı!');
                        window.location.href = '/Admin/Index';
                    }
                }
                }
                    );
            }
        );
    </script>
</body>
</html>


