@using MvcCv.Models.Entity
@model List<TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-cog mr-2"></i>Admin Yönetim Paneli
                    </h3>
                </div>

                <table class="table table-bordered">
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Kullanıcı Adı
                        </th>
                        <th>
                            Kaldır
                        </th>
                        <th>
                            Düzenle
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @item.KullaniciAdi
                            </td>
                            <td>
                                <a href="/Admin/AdminSil/@item.ID" onclick="return confirmDelete();" class="btn btn-danger">Sil</a>
                            </td>
                            <td>
                                <a href="/Admin/AdminDuzenle/@item.ID" class="btn bg-gradient-gray">Düzenle</a>
                            </td>
                        </tr>
                    }
                </table>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a href="/Admin/AdminEkle/" class="btn btn-success">
                            <i class="fas fa-plus-circle mr-2"></i>Yeni Admin Ekle
                        </a>
                        <div class="badge badge-info p-2">
                            Toplam Admin: @Model.Count
                        </div>
                    </div>

                    <script type="text/javascript">
                        function confirmDelete() {
                            return confirm("Silmek istediğinize emin misiniz?");
                        }</script>

                </div>
            </div>
        </div>
    </div>
</div>
