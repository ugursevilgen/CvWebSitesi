@using MvcCv.Models.Entity
@model List<TblSosyalMedya>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .modal-content {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        .modal-header {
            background: #007aa5;
            color: white;
            border-radius: 10px 10px 0 0;
        }

        .icon-preview {
            font-size: 24px;
            margin-right: 10px;
            color: #6c757d;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesap Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#ekleModal">
                                    <i class="fas fa-plus-circle"></i>
                                    Yeni Sosyal Medya Hesabı Ekle
                                    </button>
                                    <br />
                                    <br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Sosyal Medya </th>
                                                <th>Durum</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {


                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.Ad</td>
                                                    <td>@item.Durum</td>

                                                    <td>
                                                        <a href="/SosyalMedya/Duzenle/@item.ID" class="btn bg-gradient-gray">
                                                            <i class="fas fa-pencil-alt"></i>
                                                            Düzenle
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="/SosyalMedya/Sil/@item.ID" onclick="return confirmDelete();" class="btn btn-danger">
                                                            <i class="fas fa-trash"></i>
                                                            Sil
                                                        </a>
                                                    </td>

                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                            </div>
                        </div>
                    </div>

                </div>
        </section>
    </div>
    <!-- Ekleme Modal -->
    <div class="modal fade" id="ekleModal" tabindex="-1" role="dialog" aria-labelledby="ekleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ekleModalLabel">
                        <i class="fas fa-plus-circle mr-2"></i>Yeni Sosyal Medya Hesabı Ekle
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/SosyalMedya/Ekle" method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="Ad">Sosyal Medya Adı</label>
                            <input type="text" class="form-control" id="Ad" name="Ad" required placeholder="Ör: Twitter, LinkedIn">
                        </div>
                        <div class="form-group">
                            <label for="Link">Hesap Linki</label>
                            <input type="url" class="form-control" id="Link" name="Link" required placeholder="Ör: https://twitter.com/kullaniciadi">
                        </div>
                        <div class="form-group">
                            <label for="Ikon">Font Awesome İkon Kodu</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text icon-preview" id="iconPreview"><i class="fas fa-question"></i></span>
                                </div>
                                <input type="text" class="form-control" id="Ikon" name="Ikon" required placeholder="Ör: fab fa-twitter">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" onclick="previewIcon()">Önizleme</button>
                                </div>
                            </div>
                            <small class="form-text text-muted">Font Awesome ikon kodunu girin (fab veya fas önekli)</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- jQuery ve Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // İkon önizleme fonksiyonu
        function previewIcon() {
            const iconCode = document.getElementById('Ikon').value;
            const preview = document.getElementById('iconPreview');

            if (iconCode) {
                preview.innerHTML = `<i class="${iconCode}"></i>`;
            } else {
                preview.innerHTML = '<i class="fas fa-question"></i>';
            }
        }

        // Silme onayı
        function confirmDelete() {
            return confirm("Silmek istediğinize emin misiniz?");
        }

        // Modal açıldığında formu resetle
        $('#ekleModal').on('show.bs.modal', function () {
            $(this).find('form')[0].reset();
            document.getElementById('iconPreview').innerHTML = '<i class="fas fa-question"></i>';
        });
    </script>
</body>
</html>




