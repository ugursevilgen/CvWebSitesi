@using MvcCv.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
     

        <div class="container-fluid">

            <br />

            <a href="/Sertifika/YeniSertifika" class="btn btn-info btn-lg">
                <i class="fas fa-plus-circle"></i>
                Yeni Sertifika Ekle
            </a>

            <br />
            <br />

            <div class="row">



                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    <!-- The timeline -->
                                    @foreach (var item in Model)
                                    {

                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-gradient-navy">
                                                @item.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-pagelines"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifika/SertifikaGetir/@item.ID"  class="btn bg-gradient-gray btn-sm">
                                                        <i class="fas fa-pencil-alt"></i> Düzenle
                                                    </a>
                                                    <a href="/Sertifika/SertifikaSil/@item.ID" onclick="return confirmDelete();" class="btn btn-danger btn-sm"> 
                                                        <i class="fas fa-trash"></i> Sil
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>
<script type="text/javascript">
    function confirmDelete() {
        return confirm("Silmek istediğinize emin misiniz?");
    }</script>